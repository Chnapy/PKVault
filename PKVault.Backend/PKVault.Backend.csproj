<Project Sdk="Microsoft.NET.Sdk.Web">
  <PropertyGroup>
    <!-- <OutputType>Exe</OutputType> -->
    <TargetFramework>net10.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <RootNamespace>PKVault.Backend</RootNamespace>
    <!-- <PublishAot>true</PublishAot> -->
    <!-- <IsAotCompatible>true</IsAotCompatible> -->
    
    <!-- <PublishSingleFile>true</PublishSingleFile> -->
    <!-- <SelfContained>true</SelfContained> -->

    <Version>1.4.3</Version>
    <ApplicationDisplayVersion>1.4.3</ApplicationDisplayVersion>
    <ApplicationVersion>1.4.3</ApplicationVersion>
    <NeutralLanguage>en</NeutralLanguage>
    <Product>PKVault</Product>
    <Authors>Richard Haddad</Authors>
    <Copyright>Richard Haddad</Copyright>
    <SourceRevisionId>$([System.DateTime]::UtcNow.ToString("yyMMddHHmmss"))</SourceRevisionId>
    <RepositoryType>git</RepositoryType>
    <RepositoryUrl>https://github.com/Chnapy/PKVault</RepositoryUrl>
    <PackageProjectUrl>https://github.com/Chnapy/PKVault</PackageProjectUrl>
  </PropertyGroup>

  <PropertyGroup>
    <EffectiveMode>$([MSBuild]::ValueOrDefault('$(Mode)', 'default'))</EffectiveMode>

    <ModeDefine Condition=" '$(EffectiveMode)' == 'gen-pokeapi' ">MODE_GEN_POKEAPI</ModeDefine>
    <ModeDefine Condition=" '$(EffectiveMode)' == 'gen-migration' ">MODE_GEN_MIGRATION</ModeDefine>
    <ModeDefine Condition=" '$(EffectiveMode)' == 'default' ">MODE_DEFAULT</ModeDefine>

    <DefineConstants>$(DefineConstants);$(ModeDefine)</DefineConstants>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.EntityFrameworkCore.Design" Version="10.0.2">
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
      <PrivateAssets>all</PrivateAssets>
    </PackageReference>
    <PackageReference Include="Microsoft.EntityFrameworkCore.Sqlite" Version="10.0.2" />
    <PackageReference Include="PKHeX.Core" Version="26.1.31" />
    <PackageReference Include="PokeApiNet" Version="4.1.0" />
    <PackageReference Include="SixLabors.ImageSharp" Version="3.1.11" />
    <PackageReference Include="System.IO.Abstractions" Version="22.1.0" />
  </ItemGroup>

  <Choose>
    <!-- <When Condition=" '$(EffectiveMode)' == 'gen-pokeapi' ">
      <ItemGroup>
      </ItemGroup>
    </When> -->

    <When Condition=" '$(EffectiveMode)' == 'default' ">
      <ItemGroup Condition="'$(Configuration)' == 'Debug'">
        <PackageReference Include="NSwag.AspNetCore" Version="14.6.3" />
      </ItemGroup>
      <ItemGroup>
        <EmbeddedResource Include="pokeapi/generated/**/*" CopyToOutputDirectory="Never" CopyToPublishDirectory="Never" />
        <Content Remove="pokeapi/generated/**/*" CopyToOutputDirectory="Never" CopyToPublishDirectory="Never" />
      </ItemGroup>
    </When>
  </Choose>
</Project>
